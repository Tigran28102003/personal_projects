import random as rd

hachicks_cnt = 10000
cnt = 0
ans_done = []
print('ИГРА НАЧИНАЕТСЯ. ПРАВИЛА ИГРЫ ПРОСТЫ: ВАМ ВСЕГО ЛИШЬ НУЖНО ОТГАДАТЬ ЧИСЛО ОТ 1 ДО 10. В НАЧАЛЕ ИГРЫ НА ВАШЕМ ')
print('СЧЕТУ 10,000 ИМПЕРСКИХ ХАЧИКСОВ (ИГРОВАЯ ВАЛЮТА), ЕСЛИ ВЫ ОТГАДАЛИ ЧИСЛО ВЫ ЗАРАБАТЫВАЕТЕ 1,000 ИМПЕРСКИХ ХАЧИКСОВ, ')
print('ОТГАДАЛИ ДВАЖДЫ - 2,000 , ТРИЖДЫ - 3,000. ЕСЛИ У ВАС ПОЛУЧИТЬСЯ ЭТО СДЕЛАТЬ, ТО ВАМ ПРЕДЛОЖИТЬСЯ СЫГРАТЬ В ')
print('СУПЕР-ИГРУ, ГДЕ МОЖНО БУДЕТ УТРОИТЬ СВОЙ ВЫИГРЫШЬ И НАЧАТЬ ИГРУ ПО КРУПНОМУ И ОТГАДАТЬ ЧИСЛО ОТ 1 ДО 100. ')
print('ПОЛУЧИТЬСЯ ЛИ У ВАС ЭТО СДЕЛАТЬ? ДАВАЙТЕ ПРОВЕРИМ!')
print('')

while 1:
    ans = int(input('назовите число от 1 до 10: '))
    num = rd.randrange(1, 11)
    ans_done.append(num)
    if ans == num and cnt != 3:
        cnt += 1
        hachicks_cnt += 1000 * cnt
        print('ХОРОШО ИДЕШЬ! ПРОДОЛЖИМ ИГРАТЬ?')
        if input('для продолжения игры нажмите 1, для завершения процесса нажмите любую другую кнопку:') != '1':
            continue
    else:
        if cnt == 3:
            ans = int(input('назовите число от 1 до 100: '))
            num = rd.randrange(1, 101)
            if ans == num:
                print('КАК У ТЕБЯ ЭТО ВЫШЛО!!! ПЛАСТМАСОВЫЙ МИР ЕЩЕ НЕ ПОБЕДИЛ')
            else:
                print('ТЫ ВСЕ ПРОИГРАЛ!')
                cnt = 0
        else:
            hachicks_cnt -= 1000
            print('')
            print('НЕВЕРНО. ТЫ ПОТЕРЯЛ 1,000 ИМПЕРСКИХ ХАЧИКСОВ')
            print(f'ТЕБЕ УДАЛОСЬ ОТВЕТИТЬ ВЕРНО {cnt} РАЗ(А)')
            print(f'ПРАВИЛЬНЫМ ОТВЕТОМ БЫЛО {ans_done[-1]}')
            print('')
            if hachicks_cnt != 0:
                if input('для продолжения игры нажмите 1, для завершения процесса нажмите любую другую кнопку:') == '1':
                    continue
                else:
                    break
            else:
                print('СЕГОДНЯ ТОЧНО НЕ ТВОЙ ДЕНЬ! ДЛЯ ТЕБЯ ИГРА ЗАКОНЧИЛАСЬ!')

